<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">
    <!--<include
        layout="@layout/toolbar_layout"/>-->
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <EditText
                    android:id="@+id/edtFirstNameUserProf"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:maxLines="1"
                    android:inputType="none"
                    android:singleLine="true"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/edtLastNameUserProf"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:maxLines="1"
                    android:inputType="none"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <EditText
                android:id="@+id/edtStreetAddressUserProf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street Address"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/edtPostalCodeUserProf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Postal Code"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/edtPhoneNumberUserProf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="phone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/edtSignUpEmailUserProf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:inputType="none"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btnUpdate"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:text="Update"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/btnCancel"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:text="Cancel"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>